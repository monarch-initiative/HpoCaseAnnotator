<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.monarchinitiative.hpo-case-annotator</groupId>
    <artifactId>hpo-case-annotator</artifactId>
    <version>1.0.7-beta</version>
    <modules>
        <module>hpo-case-annotator-core</module>
        <module>hpo-case-annotator-cli</module>
        <module>hpo-case-annotator-gui</module>
        <module>hpo-case-annotator-model</module>
    </modules>
    <packaging>pom</packaging>

    <name>Hpo Case Annotator</name>
    <url>https://github.com/monarch-initiative/HpoCaseAnnotator</url>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <jannovar.version>0.22</jannovar.version>
        <phenopacket.version>0.0.5</phenopacket.version>
        <jackson.fasterxml.version>2.8.8</jackson.fasterxml.version>
        <jdk.version>1.8</jdk.version>
        <spring.version>4.3.8.RELEASE</spring.version>
        <junit.version>4.12</junit.version>
        <slf4j.version>1.7.25</slf4j.version>
        <protobuf.version>3.5.1</protobuf.version>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>kr.motd.maven</groupId>
                <artifactId>sphinx-maven-plugin</artifactId>
                <version>2.2.2</version>
                <configuration>
                    <sourceDirectory>${project.basedir}/docs/source</sourceDirectory>
                    <outputDirectory>${project.basedir}/docs/build</outputDirectory>
                </configuration>
                <executions>
                    <execution>
                        <id>make-docs</id>
                        <phase>package</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
