<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.monarchinitiative.hpo_case_annotator.forms.component.*?>

<!-- the same as SimpleBindingAge -->
<fx:root xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
         type="VBox"
         stylesheets="@age.css">
    <children>
        <FlowPane id="age-box">
            <children>
                <HBox styleClass="age-datum">
                    <children>
                        <TitledTextField fx:id="years" name="Years" HBox.hgrow="ALWAYS"/>
                        <Button onAction="#clearYears" styleClass="clear-button" />
                    </children>
                </HBox>
                <HBox styleClass="age-datum">
                    <children>
                        <TitledComboBox fx:id="months" name="Months" HBox.hgrow="ALWAYS"/>
                        <Button onAction="#clearMonths" styleClass="clear-button" />
                    </children>
                </HBox>
                <HBox styleClass="age-datum">
                    <children>
                        <TitledComboBox fx:id="days" name="Days" HBox.hgrow="ALWAYS"/>
                        <Button onAction="#clearDays" styleClass="clear-button" />
                    </children>
                </HBox>
            </children>
        </FlowPane>
    </children>
</fx:root>
