<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.monarchinitiative.hpo_case_annotator.forms.mining.MiningResultsVettingBox"
      stylesheets="@mining-results-vetting-box.css">
    <children>
        <HBox>
            <children>
                <VBox >
                    <Label styleClass="tm-title" text="Text mining results"/>
                    <Label text="Text"/>
                    <TextFlow fx:id="textFlow" id="text-flow"/>
                    <Label text="Status"/>
                    <Label fx:id="statusLabel"/>
                </VBox>
                <VBox >
                    <Label styleClass="tm-title" text="Vetted phenotypic features"/>
                    <TableView fx:id="vettedPhenotypicFeatures">
                        <columns>
                            <TableColumn maxWidth="25.0" fx:id="statusColumn"/>
                            <TableColumn minWidth="120.0" text="Id" fx:id="idColumn"/>
                            <TableColumn minWidth="200.0" text="Name" fx:id="nameColumn"/>
                            <TableColumn minWidth="100.0" text="Excluded" fx:id="excludedColumn"/>
                        </columns>
                        <placeholder>
                            <Label text="No vetted features yet"/>
                        </placeholder>
                        <columnResizePolicy>
                            <TableView fx:constant="UNCONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </VBox>
            </children>
        </HBox>
    </children>
</VBox>
