<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import org.monarchinitiative.hpo_case_annotator.forms.mining.MiningResultsVetting?>
<fx:root xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
         type="VBox" stylesheets="@text-mining.css">
    <children>
        <TabPane id="tm-tab-pane" fx:id="contentTabPane" side="LEFT" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
            <Tab fx:id="submitTab" text="Submit">
                <tooltip>
                    <Tooltip text="Submit text for text mining" />
                </tooltip>
                <content>
                    <VBox>
                        <children>
                            <Label text="Submit text" styleClass="h3"/>
                            <TextField fx:id="payload" disable="true"
                                       onAction="#submitInputText" VBox.vgrow="ALWAYS"
                                       promptText="Paste the text to mine and hit Submit"/>
                            <ButtonBar>
                                <buttons>
                                    <Button fx:id="submitButton" disable="true" onAction="#submitInputText" text="Submit" ButtonBar.buttonData="OK_DONE" />
                                </buttons>
                            </ButtonBar>
                        </children>
                    </VBox>
                </content>
            </Tab>
            <Tab fx:id="reviewTab" text="Review">
                <tooltip>
                    <Tooltip text="Review text mining results" />
                </tooltip>
                <content>
                    <VBox>
                        <children>
                            <Label text="Review results" />
                            <MiningResultsVetting fx:id="vetting"/>
                        </children>
                    </VBox>
                </content>
            </Tab>
        </TabPane>
    </children>
</fx:root>
