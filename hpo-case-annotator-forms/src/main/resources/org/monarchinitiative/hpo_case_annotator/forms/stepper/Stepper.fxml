<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
         type="VBox"
         id="stepper-box">
    <stylesheets>
        <URL value="@stepper.css"/>
        <URL value="@step-base.css"/>
    </stylesheets>
    <children>
        <ScrollPane id="stepper-scroll-pane"
                    VBox.vgrow="ALWAYS"
                    fitToWidth="true" fitToHeight="true">
            <content>
                <VBox id="stepper-centerer">
                    <children>
                        <VBox fx:id="content" id="stepper-content" VBox.vgrow="ALWAYS"/>
                    </children>
                </VBox>

            </content>
        </ScrollPane>

        <ButtonBar id="button-bar">
            <buttons>
                <Button onAction="#cancelAction" ButtonBar.buttonData="CANCEL_CLOSE" text="Cancel"/>
                <Button fx:id="previous" onAction="#previousStep" ButtonBar.buttonData="BACK_PREVIOUS" text="Previous"/>
                <Button fx:id="next" onAction="#nextStep" ButtonBar.buttonData="NEXT_FORWARD" text="Next"/>
                <Button onAction="#finishAction" ButtonBar.buttonData="OK_DONE" text="Finish"/>
            </buttons>
        </ButtonBar>
    </children>
</fx:root>
