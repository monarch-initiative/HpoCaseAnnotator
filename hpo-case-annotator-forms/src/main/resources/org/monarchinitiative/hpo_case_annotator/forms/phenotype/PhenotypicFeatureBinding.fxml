<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<?import org.monarchinitiative.hpo_case_annotator.forms.component.TitledLabel?>
<?import org.monarchinitiative.hpo_case_annotator.forms.component.age.TimeElementBindingComponent?>

<fx:root xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
         type="VBox"
         stylesheets="@phenotypic-feature.css"
         id="phenotypic-feature-box">
    <children>
        <VBox>
            <children>
                <Label styleClass="h2" text="Phenotype feature"/>
                <VBox id="phenotypic-feature-column" VBox.vgrow="SOMETIMES">
                    <children>
                        <TitledLabel fx:id="name" id="term-name" />
                        <TitledLabel fx:id="definition" name="Definition" id="term-definition" />
                    </children>
                </VBox>
            </children>
        </VBox>
        <Separator/>
        <VBox>
            <children>
                <Label styleClass="h2" text="Status"/>
                <RadioButton fx:id="presentRadioButton" mnemonicParsing="false" text="Present" selected="true"/>
                <RadioButton fx:id="absentRadioButton" mnemonicParsing="false" text="Excluded"/>
            </children>
        </VBox>
        <Separator/>
        <VBox>
            <children>
                <Label styleClass="h2" text="Temporal"/>
                <VBox>
                    <children>
                        <Label styleClass="h3" text="Onset"/>
                        <CheckBox fx:id="onsetIsUnknown" text="Onset is unknown" selected="true"/>
                        <TimeElementBindingComponent fx:id="onsetComponent" disable="true"/>
                    </children>
                </VBox>
                <VBox>
                    <children>
                        <Label styleClass="h3" text="Resolution"/>
                        <CheckBox fx:id="resolutionIsUnknown" text="Resolution is unknown" selected="true"/>
                        <TimeElementBindingComponent fx:id="resolutionComponent" disable="true"/>
                    </children>
                </VBox>
            </children>
        </VBox>
        <Separator/>
        <VBox>
            <children>
                <Label styleClass="h2" text="Modifiers"/>
                <Text text="Not yet implemented" style="-fx-fill: grey"/>
            </children>
        </VBox>
    </children>
</fx:root>
