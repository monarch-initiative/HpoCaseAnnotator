<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<?import org.monarchinitiative.hpo_case_annotator.forms.component.TitledTextField?>
<?import org.monarchinitiative.hpo_case_annotator.forms.component.TitledComboBox?>
<?import org.monarchinitiative.hpo_case_annotator.forms.component.age.SimpleEditableAge?>

<fx:root xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
         type="javafx.scene.layout.VBox"
         stylesheets="@time-element-editable-component.css" >
    <children>
        <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab fx:id="gestationalAgeTab" closable="false">
                    <graphic>
                        <ImageView fitHeight="25" preserveRatio="true">
                            <Image url="@pregnant.png" />
                        </ImageView>
                    </graphic>
                    <content>
                        <VBox styleClass="entries">
                            <children>
                                <HBox alignment="CENTER_LEFT">
                                    <children>
                                        <TitledTextField fx:id="gestationalWeeks" name="Weeks" promptText="e.g. 25" />
                                        <Button onAction="#clearGestationalWeeks" styleClass="clear-button"/>
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER_LEFT">
                                    <children>
                                        <TitledComboBox fx:id="gestationalDays" name="Days" />
                                        <Button onAction="#clearGestationalDays" styleClass="clear-button"/>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </content>
                </Tab>
                <Tab fx:id="ageTab" closable="false">
                    <graphic>
                        <ImageView fitHeight="25" preserveRatio="true">
                            <Image url="@person.png" />
                        </ImageView>
                    </graphic>
                    <content>
                        <VBox>
                            <children>
                                <Label text="Age"/>
                                <SimpleEditableAge fx:id="age"/>
                            </children>
                        </VBox>
                    </content>
                </Tab>
                <Tab fx:id="ageRangeTab" closable="false">
                    <graphic>
                        <ImageView fitHeight="25" preserveRatio="true">
                            <Image url="@person.png" />
                        </ImageView>
                    </graphic>
                    <content>
                        <VBox>
                            <children>
                                <Label text="Age range"/>
                                <SimpleEditableAge fx:id="ageRangeStart"/>
                                <SimpleEditableAge fx:id="ageRangeEnd"/>
                            </children>
                        </VBox>
                    </content>
                </Tab>
                <Tab fx:id="ontologyClassTab" closable="false">
                    <graphic>
                        <ImageView fitHeight="25" preserveRatio="true">
                            <Image url="@../../icons/hpo-logo-black.png" />
                        </ImageView>
                    </graphic>
                    <content>
                        <VBox>
                            <children>
                                <Label text="Ontology class"/>
                                <HBox alignment="CENTER_LEFT">
                                    <children>
                                        <ComboBox fx:id="ontologyClassComboBox"/>
                                        <Button onAction="#clearOntologyClass" styleClass="clear-button"/>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</fx:root>
