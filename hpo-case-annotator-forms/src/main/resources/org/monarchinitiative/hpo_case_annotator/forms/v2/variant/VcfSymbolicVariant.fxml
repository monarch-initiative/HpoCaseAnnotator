<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.*?>

<VBox styleClass="section" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.monarchinitiative.hpo_case_annotator.forms.v2.variant.VcfSymbolicVariantController">
    <stylesheets>
        <URL value="@variant.css" />
        <URL value="@../../base.css" />
    </stylesheets>
    <children>
        <Label styleClass="h2" text="VCF symbolic variant" />
        <HBox alignment="CENTER_LEFT" styleClass="row">
            <children>
                <VBox alignment="CENTER_LEFT" styleClass="column" HBox.hgrow="NEVER">
                    <children>
                        <Label styleClass="h3" text="Genome build" />
                        <HBox alignment="CENTER_LEFT" VBox.vgrow="NEVER">
                            <children>
                                <RadioButton fx:id="hg18RadioButton" disable="true" mnemonicParsing="false" text="hg18" />
                                <RadioButton fx:id="hg19RadioButton" disable="true" mnemonicParsing="false" text="GRCh37" />
                                <RadioButton fx:id="hg38RadioButton" disable="true" mnemonicParsing="false" text="GRCh38" />
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <VBox styleClass="column" HBox.hgrow="NEVER">
                    <children>
                        <Label styleClass="h3" text="Contig" />
                        <SearchableComboBox fx:id="contigComboBox" disable="true" />
                    </children>
                </VBox>

            </children>
        </HBox>
        <Separator />
        <HBox alignment="CENTER_LEFT" styleClass="row">
            <children>
            <VBox styleClass="column" HBox.hgrow="ALWAYS">
               <children>
                      <Label styleClass="h3" text="Id" />
                      <TextField fx:id="idTextField" promptText="e.g. rs123456" />
               </children>
            </VBox>
            </children>
        </HBox>
        <Separator />
        <HBox alignment="CENTER_LEFT" styleClass="row">
            <children>
            <VBox styleClass="column" HBox.hgrow="ALWAYS">
               <children>
                  <Label styleClass="h3" text="Coordinates" />
                  <HBox styleClass="row">
                     <children>
                            <VBox alignment="CENTER_LEFT" styleClass="column" HBox.hgrow="ALWAYS">
                           <children>
                                    <Label text="Start" />
                                    <TextField fx:id="startTextField" promptText="e.g. 10001" />
                           </children>
                            </VBox>
                            <VBox alignment="CENTER_LEFT" styleClass="column" HBox.hgrow="ALWAYS">
                                <children>
                                    <Label text="End" />
                                    <TextField fx:id="endTextField" promptText="e.g. 20000" />
                                </children>
                            </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
            </children>
        </HBox>
        <Separator />
      <HBox styleClass="row">
         <children>
              <VBox styleClass="column" HBox.hgrow="ALWAYS">
                  <children>
                      <Label styleClass="h3" text="Alleles" />
                      <VBox>
                          <children>
                              <HBox alignment="CENTER_LEFT" styleClass="row">
                                  <children>
                                      <Label text="Reference" />
                                      <TextField fx:id="referenceTextField" promptText="e.g. N" HBox.hgrow="ALWAYS" />
                                  </children>
                              </HBox>
                              <HBox alignment="CENTER_LEFT" styleClass="row">
                                  <children>
                                      <Label text="Alternative" />
                                      <SearchableComboBox fx:id="altComboBox" HBox.hgrow="ALWAYS" />
                                  </children>
                              </HBox>
                          </children>
                      </VBox>
                  </children>
              </VBox>
         </children>
      </HBox>
      <HBox styleClass="row">
         <children>
            <Pane HBox.hgrow="ALWAYS" />
            <Button defaultButton="true" mnemonicParsing="false" onAction="#okButtonAction" styleClass="ok-button" text="OK" />
         </children>
      </HBox>
    </children>
</VBox>
