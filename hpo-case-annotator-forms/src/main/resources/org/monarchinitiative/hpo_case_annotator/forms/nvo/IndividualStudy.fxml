<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<?import org.monarchinitiative.hpo_case_annotator.forms.individual.Individual?>
<?import org.monarchinitiative.hpo_case_annotator.forms.metadata.Metadata?>
<?import org.monarchinitiative.hpo_case_annotator.forms.publication.Publication?>
<?import org.monarchinitiative.hpo_case_annotator.forms.variants.VariantSummary?>

<fx:root xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
         type="VBox"
         id="outer-box">
    <stylesheets>
        <URL value="@../base.css"/>
        <URL value="@individual-study.css"/>
    </stylesheets>
    <children>
        <HBox id="study-headline">
            <children>
                <Label styleClass="scene-title" text="Individual study">
                    <graphic>
                        <ImageView preserveRatio="true">
                            <Image url="@../icons/individual.png"/>
                        </ImageView>
                    </graphic>
                </Label>
                <HBox id="nav-row" HBox.hgrow="ALWAYS">
                    <children>
                        <!-- BASE STUDY -->
                        <Button text="Publication" onAction="#publicationNavMouseClicked" disable="true"/>
                        <!-- INDIVIDUAL STUDY -->
                        <Button text="Individual" onAction="#individualNavMouseClicked" disable="true"/>
                        <!-- BASE STUDY -->
                        <Button text="Variants" onAction="#variantsNavMouseClicked" disable="true"/>
                        <!-- BASE STUDY -->
                        <Button text="Metadata" onAction="#metadataNavMouseClicked" disable="true"/>
                    </children>
                </HBox>
            </children>
        </HBox>
        <ScrollPane fx:id="studyScrollPane" id="study-scroll-pane">
            <content>
                <VBox id="study-document">
                    <children>
                        <VBox  VBox.vgrow="NEVER" styleClass="section">
                            <children>
                                <Label text="Publication" styleClass="h1" />
                                <StackPane fx:id="publicationPane">
                                    <children>
                                        <Publication fx:id="publication" StackPane.alignment="CENTER"/>
                                        <Button fx:id="editPublication" contentDisplay="GRAPHIC_ONLY"
                                                mnemonicParsing="false" onAction="#editPublicationAction"
                                                styleClass="edit-button" visible="false"
                                                StackPane.alignment="TOP_RIGHT"/>
                                    </children>
                                </StackPane>
                            </children>
                        </VBox>
                        <Separator/>
                        <VBox styleClass="section">
                            <children>
                                <Label text="Individual" styleClass="h1"/>
                                <Individual fx:id="individual" VBox.vgrow="ALWAYS"/>
                            </children>
                        </VBox>
                        <Separator/>
                        <VBox styleClass="section">
                            <children>
                                <Label text="Variants" styleClass="h1"/>
                                <VariantSummary fx:id="variantSummary" />
                            </children>
                        </VBox>
                        <Separator/>
                        <VBox  styleClass="section">
                            <children>
                                <Label text="Metadata" styleClass="h1"/>
                                <Metadata fx:id="metadataSummary"/>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</fx:root>
