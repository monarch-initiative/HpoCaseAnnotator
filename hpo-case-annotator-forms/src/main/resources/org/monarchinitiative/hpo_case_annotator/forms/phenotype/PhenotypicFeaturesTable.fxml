<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox id="phenotypicFeaturesTable" prefHeight="250.0" styleClass="section" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.monarchinitiative.hpo_case_annotator.forms.phenotype.PhenotypicFeaturesTableController">
    <children>
        <TableView fx:id="termsTableView" styleClass="subsection" editable="true" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="termIdTableColumn" editable="false" maxWidth="-1.0" minWidth="120.0" prefWidth="-1.0" resizable="false" text="Term ID" />
                <TableColumn fx:id="labelTableColumn" editable="false" maxWidth="-1.0" minWidth="250.0" prefWidth="-1.0" text="Label" />
<!--                <TableColumn fx:id="onsetTableColumn" editable="false" minWidth="90.0" prefWidth="90.0" text="Onset"/>-->
<!--                <TableColumn fx:id="resolutionTableColumn" editable="false" minWidth="90.0" prefWidth="90.0"-->
<!--                             text="Resolution"/>-->
<!--                <TableColumn fx:id="presentTableColumn" editable="false" minWidth="75.0" prefWidth="75.0"-->
<!--                             text="Present"/>-->
            </columns>
            <placeholder>
                <Label>No data to display</Label>
            </placeholder>
        </TableView>
        <HBox styleClass="subsection" alignment="CENTER_RIGHT" VBox.vgrow="NEVER">
            <children>
                <Button fx:id="addEditButton" disable="true" mnemonicParsing="false" onAction="#addEditButtonAction" text="Add" />
                <Button fx:id="removeButton" disable="true" mnemonicParsing="false" onAction="#removeButtonAction" text="Remove" />
            </children>
        </HBox>
    </children>
</VBox>
