<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.monarchinitiative.hpo_case_annotator.forms.study.IndividualVariantSummaryController">
    <children>
        <VBox HBox.hgrow="ALWAYS">
            <children>
                <Label styleClass="h2" text="Variant genotypes" VBox.vgrow="NEVER" />
                <TableView fx:id="variantTableView" editable="true" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="genotypeTableColumn" minWidth="200.0" prefWidth="200.0" text="Genotype" />
                        <TableColumn fx:id="variantIdTableColumn" editable="false" minWidth="75.0" prefWidth="75.0" text="Id" />
                        <TableColumn fx:id="genomicAssemblyTableColumn" editable="false" minWidth="75.0" prefWidth="75.0" text="Assembly" />
                        <TableColumn fx:id="contigTableColumn" editable="false" minWidth="75.0" prefWidth="75.0" text="Contig" />
                        <TableColumn fx:id="startTableColumn" editable="false" prefWidth="75.0" text="Start" />
                        <TableColumn fx:id="endTableColumn" editable="false" prefWidth="75.0" text="End" />
                        <TableColumn fx:id="refTableColumn" editable="false" prefWidth="75.0" text="REF" />
                        <TableColumn fx:id="altTableColumn" editable="false" prefWidth="75.0" text="ALT" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </children>
</HBox>
