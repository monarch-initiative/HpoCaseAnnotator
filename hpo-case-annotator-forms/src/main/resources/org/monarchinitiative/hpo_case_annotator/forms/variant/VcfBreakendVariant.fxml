<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.URL?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox styleClass="section" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.monarchinitiative.hpo_case_annotator.forms.variant.VcfBreakendVariantController">
    <stylesheets>
        <URL value="@variant.css" />
        <URL value="@../base.css" />
    </stylesheets>
    <children>
          <Label styleClass="h2" text="VCF breakend variant" />
        <HBox alignment="CENTER_LEFT" styleClass="row" VBox.vgrow="NEVER">
            <children>
                <VBox alignment="CENTER_LEFT" minHeight="50.0" minWidth="250.0" styleClass="column" HBox.hgrow="SOMETIMES">
                    <children>
                        <Label styleClass="h3" text="Genome build" />
                        <HBox alignment="CENTER_LEFT" prefHeight="30.0" spacing="5.0" VBox.vgrow="NEVER">
                            <children>
                                <RadioButton fx:id="hg18RadioButton" disable="true" mnemonicParsing="false" text="hg18" />
                                <RadioButton fx:id="hg19RadioButton" disable="true" mnemonicParsing="false" text="GRCh37" />
                                <RadioButton fx:id="hg38RadioButton" disable="true" mnemonicParsing="false" text="GRCh38" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="286.0" styleClass="row">
            <children>
            <VBox styleClass="column" HBox.hgrow="ALWAYS">
               <children>
                      <Label styleClass="h3" text="Event id" wrapText="true" />
                      <TextField fx:id="eventIdTextField" promptText="e.g. CCTAAGCT" />
               </children>
            </VBox>
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" styleClass="row">
            <children>
            <VBox styleClass="column" HBox.hgrow="ALWAYS">
               <children>
                  <Label styleClass="h3" text="Breakpoints" />
                  <HBox prefHeight="100.0" prefWidth="200.0" styleClass="row">
                     <children>
                            <VBox alignment="CENTER_LEFT" prefWidth="200.0" styleClass="column">
                                <children>
                                    <Label contentDisplay="CENTER" styleClass="h4" text="Left" />
                                    <fx:include fx:id="leftBreakend" source="Breakend.fxml" />
                                </children>
                            </VBox>
                            <Separator orientation="VERTICAL" />
                            <VBox alignment="CENTER_LEFT" prefWidth="200.0" styleClass="column">
                                <children>
                                    <Label styleClass="h4" text="Right" />
                                    <fx:include fx:id="rightBreakend" source="Breakend.fxml" />
                                </children>
                            </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" layoutX="15.0" layoutY="291.0" styleClass="row">
            <children>
            <VBox styleClass="column" HBox.hgrow="ALWAYS">
               <children>
                  <Label styleClass="h3" text="Alleles" />
                  <HBox alignment="CENTER_LEFT">
                     <children>
                            <Label text="Reference sequence" wrapText="true" />
                            <TextField fx:id="referenceSequenceTextField" promptText="e.g. CCTAAGCT" HBox.hgrow="ALWAYS" />
                     </children>
                     <styleClass>
                        <String fx:value="row" />
                        <String fx:value="allele-row" />
                     </styleClass>
                  </HBox>
                  <HBox alignment="CENTER_LEFT">
                     <children>
                            <Label text="Inserted sequence" wrapText="true" />
                            <TextField fx:id="insertedSequenceTextField" promptText="e.g. CCTAAGCT" HBox.hgrow="ALWAYS" />
                     </children>
                     <styleClass>
                        <String fx:value="row" />
                        <String fx:value="allele-row" />
                     </styleClass>
                  </HBox>
               </children>
            </VBox>
            </children>
        </HBox>
    </children>
</VBox>
