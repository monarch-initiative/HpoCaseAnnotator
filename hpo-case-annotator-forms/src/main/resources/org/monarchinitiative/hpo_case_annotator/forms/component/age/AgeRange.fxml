<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import org.monarchinitiative.hpo_case_annotator.forms.component.age.SimpleAge?>

<fx:root xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
         type="javafx.scene.layout.VBox"
         stylesheets="@age-range.css">
    <children>
        <Label text="Age range">
            <graphic>
                <ImageView fitHeight="25" preserveRatio="true">
                    <Image url="@person.png" />
                </ImageView>
            </graphic>
        </Label>
        <VBox>
            <children>
                <HBox alignment="CENTER_LEFT" >
                    <children>
                        <Label text="Start" styleClass="ar-label"/>
                        <SimpleAge fx:id="start"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT">
                    <children>
                        <Label text="End" styleClass="ar-label"/>
                        <SimpleAge fx:id="end"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</fx:root>
