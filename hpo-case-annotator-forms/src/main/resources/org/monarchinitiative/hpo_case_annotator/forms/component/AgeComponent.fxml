<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import org.monarchinitiative.hpo_case_annotator.forms.component.*?>

<VBox stylesheets="@age-editable-component.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.monarchinitiative.hpo_case_annotator.forms.component.AgeComponent">
    <CheckBox fx:id="ageIsUnknown" selected="true" text="Unknown" />
    <VBox fx:id="box">
        <children>
            <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE">
                <tabs>
                    <Tab fx:id="postnatalTab" closable="false">
                        <tooltip>
                            <Tooltip>
                                <text>Postnatal age</text>
                            </Tooltip>
                        </tooltip>
                        <graphic>
                            <ImageView fitHeight="25" preserveRatio="true">
                                <Image url="@person.png" />
                            </ImageView>
                        </graphic>
                        <content>
                            <VBox>
                                <children>
                                    <Label text="Postnatal age"/>
                                    <HBox styleClass="entries">
                                        <children>
                                            <TitledLabel fx:id="postnatalYears" name="Years" text="5" />
                                            <TitledLabel fx:id="postnatalMonths" name="Months" text="2" />
                                            <TitledLabel fx:id="postnatalDays" name="Days" text="1" />
                                        </children>
                                    </HBox>
                                </children>
                            </VBox>
                        </content>
                    </Tab>
                    <Tab fx:id="gestationalTab" closable="false" >
                        <tooltip>
                            <Tooltip>
                                <text>Gestational age</text>
                            </Tooltip>
                        </tooltip>
                        <graphic>
                            <ImageView fitHeight="25" preserveRatio="true">
                                <Image url="@pregnant.png" />
                            </ImageView>
                        </graphic>
                        <content>
                            <VBox>
                                <children>
                                    <Label text="Gestational age"/>
                                    <HBox styleClass="entries">
                                        <children>
                                            <TitledLabel fx:id="gestationalWeeks" name="Weeks" text="4" />
                                            <TitledLabel fx:id="gestationalDays" name="Days" text="3" />
                                        </children>
                                    </HBox>
                                </children>
                            </VBox>
                        </content>
                    </Tab>
                    <Tab fx:id="hpoTab" closable="false">
                        <tooltip>
                            <Tooltip>
                                <text>HPO onset category</text>
                            </Tooltip>
                        </tooltip>
                        <graphic>
                            <ImageView fitWidth="25" preserveRatio="true">
                                <Image url="@../icons/hpo-logo-black.png" />
                            </ImageView>
                        </graphic>
                        <content>
                            <VBox>
                                <children>
                                    <Label text="HPO onset category"/>
                                    <ComboBox fx:id="hpoOnset"/>
                                </children>
                            </VBox>
                        </content>
                    </Tab>
                </tabs>
            </TabPane>
        </children>
    </VBox>

</VBox>
