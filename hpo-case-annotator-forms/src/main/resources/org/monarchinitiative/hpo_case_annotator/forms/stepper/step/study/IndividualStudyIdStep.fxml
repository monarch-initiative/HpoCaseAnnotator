<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import org.monarchinitiative.hpo_case_annotator.forms.component.TitledTextField?>
<?import org.monarchinitiative.hpo_case_annotator.forms.component.TitledTextArea?>

<fx:root xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
         type="VBox"
         styleClass="step-box">
    <stylesheets>
        <URL value="@id-step.css"/>
    </stylesheets>
    <children>
        <Label styleClass="h1" text="Case report ID"/>
        <Label styleClass="instruction-text" text="Set case report ID."/>
        <TitledTextField fx:id="studyId" name="Case report ID" id="study-id"/>
        <Pane styleClass="spacer10px"/>
        <Label styleClass="instruction-text" text="Add description that do not fit into the study fields."/>
        <TitledTextArea fx:id="freeTextMetadata" name="Free text description" promptText="Enter free text description"/>
    </children>
</fx:root>
