<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.*?>

<fx:root xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
         type="VBox"
         stylesheets="@../../base.css">
    <children>
        <HBox alignment="CENTER_LEFT" styleClass="row">
            <children>
                <Label text="Chromosome" />
                <SearchableComboBox fx:id="contigComboBox" HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" styleClass="row">
            <children>
                <Label text="Position" />
                <TextField fx:id="positionTextField" HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" layoutX="15.0" layoutY="137.0" styleClass="row">
            <children>
                <Label text="Id" />
                <TextField fx:id="idTextField" promptText="e.g. rs123456" HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" styleClass="row">
            <children>
                <CheckBox fx:id="isPositiveStrandCheckBox" mnemonicParsing="false" selected="true" text="Positive strand" />
            </children>
        </HBox>
    </children>
</fx:root>
