<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.monarchinitiative.hpo_case_annotator.forms.component.*?>
<?import org.monarchinitiative.hpo_case_annotator.forms.component.age.*?>

<fx:root xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
         type="VBox"
         stylesheets="@phenotypic-feature.css" styleClass="pf-outer-box">
    <children>
        <VBox>
            <children>
                <Label styleClass="h2" text="Phenotype feature" />
                <VBox styleClass="ph-def-col">
                    <children>
                        <TitledLabel id="term-name" fx:id="name" name="Label" VBox.vgrow="SOMETIMES" />
                        <TitledLabel id="term-definition" fx:id="definition" name="Definition" VBox.vgrow="SOMETIMES" />
                    </children>
                </VBox>
            </children>
        </VBox>
        <Separator />
        <GridPane hgap="10" vgap="5">
            <children>
                <Label styleClass="h2" text="Status" GridPane.columnSpan="2"/>
                <RadioButton fx:id="presentRadioButton" mnemonicParsing="false" GridPane.rowIndex="1"
                             selected="true" text="Present" />
                <RadioButton fx:id="absentRadioButton" mnemonicParsing="false" GridPane.rowIndex="1" GridPane.columnIndex="1"
                             text="Excluded" />
            </children>
        </GridPane>
        <Separator />
        <VBox styleClass="temporal-col">
            <children>
                <Label styleClass="h2" text="Temporal" />
                <StackPane>
                    <children>
                        <VBox>
                            <children>
                                <VBox>
                                    <children>
                                        <Label styleClass="h3" text="Onset" />
                                        <TimeElementComponent fx:id="onsetComponent" />
                                    </children>
                                </VBox>
                                <VBox >
                                    <children>
                                        <Label styleClass="h3" text="Resolution" />
                                        <TimeElementComponent fx:id="resolutionComponent" />
                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                        <Button fx:id="editTemporalFields" onAction="#editTemporalFieldsAction" styleClass="edit-button" StackPane.alignment="TOP_RIGHT" />
                    </children>
                </StackPane>
            </children>
        </VBox>
        <Separator />
        <VBox>
            <children>
                <Label styleClass="h2" text="Modifiers" />
                <Text style="-fx-fill: grey" text="Not yet implemented" />
            </children>
        </VBox>
    </children>
</fx:root>
