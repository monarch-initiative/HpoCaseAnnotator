<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import org.monarchinitiative.hpo_case_annotator.forms.component.age.TimeElementComponent?>
<?import org.monarchinitiative.hpo_case_annotator.forms.component.TitledLabel?>

<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.monarchinitiative.hpo_case_annotator.forms.phenotype.PhenotypicFeature"
      stylesheets="@phenotypic-feature.css">
    <children>
        <VBox>
            <children>
                <Label styleClass="h3" text="Phenotype feature"/>
                <VBox id="phenotypic-feature-column" styleClass="column">
                    <children>
                        <VBox>
                            <children>
                                <TitledLabel name="ID" id="term-id" fx:id="termId"/>
                            </children>
                        </VBox>
                        <VBox>
                            <children>
                                <TitledLabel name="Label" id="term-name" fx:id="name"/>
                            </children>
                        </VBox>
                        <VBox>
                            <children>
                                <TitledLabel name="Definition" id="term-definition" fx:id="definition"/>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </VBox>
        <Separator/>
        <VBox>
            <children>
                <Label styleClass="h3" text="Status"/>
                <RadioButton fx:id="presentRadioButton" mnemonicParsing="false" text="Present"/>
                <RadioButton fx:id="absentRadioButton" mnemonicParsing="false" text="Excluded"/>
            </children>
        </VBox>
        <Separator/>
        <VBox>
            <children>
                <Label styleClass="h3" text="Temporal"/>
                <StackPane VBox.vgrow="ALWAYS">
                    <children>
                        <VBox>
                            <children>
                                <VBox>
                                    <children>
                                        <Label styleClass="h4" text="Onset"/>
                                        <TimeElementComponent fx:id="onsetComponent"/>
                                    </children>
                                </VBox>
                                <VBox>
                                    <children>
                                        <Label styleClass="h4" text="Resolution"/>
                                        <TimeElementComponent fx:id="resolutionComponent"/>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                        <Button fx:id="editTemporalFields" onAction="#editTemporalFieldsAction"
                                styleClass="edit-button" StackPane.alignment="TOP_RIGHT"/>
                    </children>
                </StackPane>
            </children>
        </VBox>
        <Separator/>
        <VBox>
            <children>
                <Label styleClass="h3" text="Modifiers"/>
                <Text text="Not yet implemented" style="-fx-fill: red"/>
            </children>
        </VBox>
    </children>
</VBox>
