<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import org.monarchinitiative.hpo_case_annotator.forms.component.age.TimeElementComponent?>
<?import org.monarchinitiative.hpo_case_annotator.forms.component.TitledLabel?>

<fx:root xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
         type="VBox"
         stylesheets="@phenotypic-feature.css"
         id="phenotypic-feature-box">
    <children>
        <VBox>
            <children>
                <Label styleClass="h2" text="Phenotype feature"/>
                <VBox id="phenotypic-feature-column">
                    <children>
                        <TitledLabel fx:id="name" name="Label" id="term-name" />
                        <TitledLabel fx:id="definition" name="Definition" id="term-definition" />
                    </children>
                </VBox>
            </children>
        </VBox>
        <Separator/>
        <VBox>
            <children>
                <Label styleClass="h2" text="Status"/>
                <RadioButton fx:id="presentRadioButton" mnemonicParsing="false" text="Present" selected="true"/>
                <RadioButton fx:id="absentRadioButton" mnemonicParsing="false" text="Excluded"/>
            </children>
        </VBox>
        <Separator/>
        <VBox>
            <children>
                <Label styleClass="h2" text="Temporal"/>
                <StackPane>
                    <children>
                        <VBox>
                            <children>
                                <VBox>
                                    <children>
                                        <Label styleClass="h3" text="Onset"/>
                                        <TimeElementComponent fx:id="onsetComponent"/>
                                    </children>
                                </VBox>
                                <VBox>
                                    <children>
                                        <Label styleClass="h3" text="Resolution"/>
                                        <TimeElementComponent fx:id="resolutionComponent"/>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                        <Button fx:id="editTemporalFields" onAction="#editTemporalFieldsAction"
                                styleClass="edit-button" StackPane.alignment="TOP_RIGHT"/>
                    </children>
                </StackPane>
            </children>
        </VBox>
        <Separator/>
        <VBox>
            <children>
                <Label styleClass="h2" text="Modifiers"/>
                <Text text="Not yet implemented" style="-fx-fill: grey"/>
            </children>
        </VBox>
    </children>
</fx:root>
