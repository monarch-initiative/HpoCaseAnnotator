<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.monarchinitiative.hpo_case_annotator.forms.component.IndividualIdsComponent?>
<?import org.monarchinitiative.hpo_case_annotator.forms.pedigree.PedigreeMemberTitle?>

<TitledPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.monarchinitiative.hpo_case_annotator.forms.pedigree.PedigreeMember"
            stylesheets="@pedigree-member.css"
            id="titled-pane-box" contentDisplay="GRAPHIC_ONLY">
    <graphic>
        <PedigreeMemberTitle fx:id="pedigreeMemberTitle"/>
    </graphic>
    <content>
        <VBox>
            <children>
                <VBox>
                    <children>
                        <Label styleClass="h4" text="Credentials"/>
                        <StackPane onMouseEntered="#identifiersSectionMouseEntered"
                                   onMouseExited="#identifiersSectionMouseExited">
                            <children>
                                <IndividualIdsComponent fx:id="individualIdentifiers" StackPane.alignment="CENTER"/>
                                <Button fx:id="editIdentifiersButton" visible="false" contentDisplay="GRAPHIC_ONLY"
                                        StackPane.alignment="TOP_RIGHT" styleClass="edit-button"
                                        onAction="#editIdentifiersAction"/>
                            </children>
                        </StackPane>
                    </children>
                </VBox>
                <VBox>
                    <children>
                        <Label styleClass="h4" text="Phenotype features"/>
                        <StackPane onMouseEntered="#phenotypesSectionMouseEntered"
                                   onMouseExited="#phenotypesSectionMouseExited">
                            <children>
                                <TableView id="hpo-terms-table" fx:id="phenotypes">
                                    <columns>
                                        <TableColumn fx:id="idColumn" editable="false" prefWidth="120.0" text="ID"/>
                                        <TableColumn fx:id="labelColumn" editable="false" prefWidth="200.0" text="Label"/>
                                        <TableColumn fx:id="statusColumn" editable="false" prefWidth="75.0" text="Status"/>
                                        <TableColumn editable="false" prefWidth="75.0" text="Temporal">
                                            <columns>
                                                <TableColumn fx:id="onsetColumn" editable="false" prefWidth="75.0" text="Onset"/>
                                                <TableColumn fx:id="resolutionColumn" editable="false" prefWidth="100.0" text="Resolution"/>
                                            </columns>
                                        </TableColumn>
                                        <!-- TODO - add when we have modifiers in the model -->
                                        <!-- <TableColumn fx:id="modifiersColumn" editable="false" prefWidth="75.0" text="Modifiers" />-->
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                    </columnResizePolicy>
                                    <placeholder>
                                        <Label text="No phenotype features yet"/>
                                    </placeholder>
                                </TableView>
                                <Button fx:id="editPhenotypeButton" visible="false" contentDisplay="GRAPHIC_ONLY"
                                        StackPane.alignment="TOP_RIGHT" styleClass="edit-button"
                                        onAction="#editPhenotypeAction" />
                            </children>
                        </StackPane>
                    </children>
                </VBox>
                <VBox>
                    <children>
                        <Label styleClass="h4" text="Diseases"/>
                        <StackPane onMouseEntered="#diseasesSectionMouseEntered"
                                   onMouseExited="#diseasesSectionMouseExited">
                            <children>
                                <TableView id="diseases-table" fx:id="diseaseTable">
                                    <columns>
                                        <TableColumn id="disease-status" fx:id="diseaseStatusColumn" editable="false" text="Status"/>
                                        <TableColumn id="disease-id" fx:id="diseaseIdColumn" editable="false" text="ID"/>
                                        <TableColumn id="disease-name" fx:id="diseaseNameColumn" editable="false" text="Name"/>
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                    </columnResizePolicy>
                                    <placeholder>
                                        <Label text="No diseases yet"/>
                                    </placeholder>
                                </TableView>
                                <Button fx:id="editDiseasesButton" visible="false" contentDisplay="GRAPHIC_ONLY"
                                        StackPane.alignment="TOP_RIGHT" styleClass="edit-button"
                                        onAction="#editDiseasesAction" />
                            </children>
                        </StackPane>
                    </children>
                </VBox>
                <VBox>
                    <children>
                        <Label styleClass="h4" text="Variant genotypes"/>
                        <TableView fx:id="genotypesTable" editable="true">
                            <columns>
                                <TableColumn fx:id="genotypeTableColumn" text="Genotype" minWidth="200.0"/>
                                <TableColumn fx:id="variantIdTableColumn" editable="false" maxWidth="-1.0" minWidth="120.0" text="Id"/>
                                <TableColumn fx:id="genomicAssemblyTableColumn" editable="false" maxWidth="-1.0" minWidth="120.0" text="Assembly"/>
                                <TableColumn fx:id="contigTableColumn" editable="false" maxWidth="-1.0" minWidth="100.0" text="Contig"/>
                                <TableColumn fx:id="startTableColumn" editable="false" maxWidth="-1.0" minWidth="100.0" text="Start"/>
                                <TableColumn fx:id="endTableColumn" editable="false" maxWidth="-1.0" minWidth="100.0" text="End"/>
                                <TableColumn fx:id="refTableColumn" editable="false" minWidth="120.0" text="Ref"/>
                                <TableColumn fx:id="altTableColumn" editable="false" minWidth="120.0" text="Alt"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="UNCONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                            <placeholder>
                                <Label text="No variants yet"/>
                            </placeholder>
                        </TableView>
                    </children>
                </VBox>
            </children>
        </VBox>
    </content>
</TitledPane>
