<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import org.monarchinitiative.hpo_case_annotator.forms.metadata.*?>
<?import org.monarchinitiative.hpo_case_annotator.forms.publication.Publication?>

<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.monarchinitiative.hpo_case_annotator.forms.nvo.FamilyStudyController"
      id="outer-box">
    <stylesheets>
        <URL value="@../base.css"/>
        <URL value="@family-study.css"/>
    </stylesheets>
    <children>
        <VBox id="content-box">
            <children>
                <HBox id="study-headline">
                    <children>
                        <Label styleClass="scene-title" text="Family study">
                            <graphic>
                                <ImageView preserveRatio="true">
                                    <Image url="@../icons/pedigree.png"/>
                                </ImageView>
                            </graphic>
                        </Label>
                        <HBox id="nav-row" HBox.hgrow="ALWAYS">
                            <children>
                                <Button text="Publication" onAction="#publicationNavMouseClicked" disable="true"/>
                                <Button text="Pedigree" onAction="#pedigreeNavMouseClicked" disable="true"/>
                                <Button text="Variants" onAction="#variantsNavMouseClicked" disable="true"/>
                                <Button text="Metadata" onAction="#metadataNavMouseClicked" disable="true"/>
                            </children>
                        </HBox>
                    </children>
                </HBox>
                <ScrollPane fx:id="studyScrollPane" id="study-scroll-pane">
                    <content>
                        <VBox id="study-document">
                            <children>
                                <VBox  VBox.vgrow="NEVER" styleClass="section">
                                    <children>
                                        <Label fx:id="publicationLabel" text="Publication" styleClass="h1" />
                                        <StackPane onMouseEntered="#publicationSectionMouseEntered"
                                                   onMouseExited="#publicationSectionMouseExited">
                                            <children>
                                                <Publication fx:id="publication" StackPane.alignment="CENTER"/>
                                                <Button fx:id="editPublication" contentDisplay="GRAPHIC_ONLY"
                                                        mnemonicParsing="false" onAction="#editPublicationAction"
                                                        styleClass="edit-button" visible="false"
                                                        StackPane.alignment="TOP_RIGHT"/>
                                            </children>
                                        </StackPane>
                                    </children>
                                </VBox>
                                <Separator/>
                                <VBox styleClass="section">
                                    <children>
                                        <Label fx:id="pedigreeLabel" text="Pedigree" styleClass="h1"/>
                                        <fx:include fx:id="pedigree" source="../pedigree/Pedigree.fxml" VBox.vgrow="ALWAYS"/>
                                    </children>
                                </VBox>
                                <Separator/>
                                <VBox styleClass="section">
                                    <children>
                                        <Label fx:id="variantsLabel" text="Variants" styleClass="h1"/>
                                        <fx:include fx:id="variantSummary" source="../variants/VariantSummary.fxml"/>
                                    </children>
                                </VBox>
                                <Separator/>
                                <VBox  styleClass="section">
                                    <children>
                                        <Label fx:id="metadataLabel" text="Metadata" styleClass="h1"/>
                                        <Metadata fx:id="metadataSummary"/>
                                    </children>
                                </VBox>
                            </children>
                        </VBox>
                    </content>
                </ScrollPane>
            </children>
        </VBox>
    </children>
</VBox>

