<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.*?>

<HBox alignment="CENTER_LEFT" styleClass="age-horizontal" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.monarchinitiative.hpo_case_annotator.forms.v2.AgeController">
    <stylesheets>
        <URL value="@base.css" />
        <URL value="@age.css" />
    </stylesheets>
    <children>
        <HBox alignment="CENTER_LEFT">
            <children>
                <TextField fx:id="yearsTextField" promptText="18" HBox.hgrow="ALWAYS" />
                <Label text="years" />
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT">
            <children>
                <SearchableComboBox fx:id="monthsComboBox" promptText="0" HBox.hgrow="ALWAYS" />
                <Label text="months" HBox.hgrow="NEVER" />
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT">
            <children>
                <SearchableComboBox fx:id="daysComboBox" promptText="0" HBox.hgrow="ALWAYS" />
                <Label text="days" HBox.hgrow="NEVER" />
            </children>
        </HBox>
    </children>
</HBox>
