<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import org.monarchinitiative.hpo_case_annotator.forms.component.TitledLabel?>

<fx:root xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
         type="VBox">
    <children>
        <Label text="Gestational age">
            <graphic>
                <ImageView fitHeight="25" preserveRatio="true">
                    <Image url="@pregnant.png" />
                </ImageView>
            </graphic>
        </Label>
        <HBox>
            <children>
                <TitledLabel fx:id="gestationalWeeks" name="Weeks"/>
                <TitledLabel fx:id="gestationalDays" name="Days" />
            </children>
        </HBox>
    </children>
</fx:root>
