<?xml version="1.0" encoding="UTF-8"?>
<assembly
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>distribution</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <!-- Jar file itself -->
            <directory>${project.build.directory}</directory>
            <outputDirectory>${file.separator}</outputDirectory>
            <includes>
                <include>${project.build.finalName}.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <!-- Dependencies -->
            <directory>${project.build.directory}${file.separator}lib</directory>
            <outputDirectory>${file.separator}lib</outputDirectory>
        </fileSet>
        <fileSet>
            <!-- Properties & template files -->
            <directory>${project.basedir}${file.separator}src${file.separator}main${file.separator}resources/dtd</directory>
            <outputDirectory>${file.separator}</outputDirectory>
            <includes>
                <include>cancer-mutation.dtd</include>
                <include>hrgm.dtd</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>